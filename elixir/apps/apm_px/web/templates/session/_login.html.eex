<h2 id="login-state"><%= gettext "You're not logged in!" %></h2>

<%= form_tag("/login", method: :post, class: "login-form") %>
  <label for="user"><%= gettext "User" %></label>
  <input class="user" name="user" type="text"></input>
  <label for="role"><%= gettext "Role" %></label>
  <%= roles_selection(@conn) %>
  <label for="login">&nbsp;</label>
  <button id="login"><%= gettext "Login" %></button>
</form>


